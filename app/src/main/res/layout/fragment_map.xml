<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true"
	tools:context=".ui.fragment.MapFragment">
	<androidx.appcompat.widget.Toolbar
		android:id="@+id/toolbar"
		android:layout_width="match_parent"
		android:layout_height="?attr/actionBarSize"
		app:title="@string/select_on_map"
		app:layout_constraintTop_toTopOf="parent"
		app:navigationIcon="@drawable/ic_navigate_up"
		app:menu="@menu/map_menu"/>
	<com.google.android.libraries.maps.MapView
		android:id="@+id/map_view"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		app:mapId="@string/map_id"
		app:layout_constraintTop_toBottomOf="@id/toolbar"
		app:layout_constraintBottom_toBottomOf="parent"/>
	<View
		android:id="@+id/dot"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintHeight_percent="0"
		app:layout_constraintWidth_percent="0"
		app:layout_constraintTop_toTopOf="@id/map_view"
		app:layout_constraintBottom_toBottomOf="@id/map_view"
		app:layout_constraintStart_toStartOf="@id/map_view"
		app:layout_constraintEnd_toEndOf="@id/map_view"/>
	<ImageView
		android:id="@+id/marker"
		android:layout_width="@dimen/_36sdp"
		android:layout_height="@dimen/_36sdp"
		android:src="@drawable/ic_marker"
		app:tint="@color/map_marker"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toTopOf="@id/dot"/>
</androidx.constraintlayout.widget.ConstraintLayout>