<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto">
	<data>
		<variable
			name="location"
			type="asceapps.weatheria.model.Location"/>
	</data>
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			style="@style/ListItem"
			android:id="@+id/tv_name"
			android:layout_width="match_parent"
			android:layout_height="?attr/listPreferredItemHeight"
			android:paddingStart="?attr/listPreferredItemHeight"
			android:text="@{@string/f_comma_sep(location.name, location.country)}"
			tools:text="@tools:sample/cities"/>
		<ImageButton
			style="@style/Widget.MaterialComponents.Button.OutlinedButton"
			android:id="@+id/ib_delete"
			android:layout_width="?attr/listPreferredItemHeight"
			android:layout_height="?attr/listPreferredItemHeight"
			android:scaleType="center"
			android:contentDescription="@string/action_delete"
			app:srcCompat="@drawable/ic_clear"/>
		<ImageButton
			style="@style/Widget.MaterialComponents.Button.OutlinedButton"
			android:id="@+id/iv_drag_handle"
			android:layout_width="?attr/listPreferredItemHeight"
			android:layout_height="?attr/listPreferredItemHeight"
			android:scaleType="center"
			android:layout_gravity="end"
			android:contentDescription="@string/cd_reorder"
			app:srcCompat="@drawable/ic_drag_handle"/>
	</FrameLayout>
</layout>
