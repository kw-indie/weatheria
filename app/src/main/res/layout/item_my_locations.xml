<?xml version="1.0" encoding="utf-8"?>
<layout>
	<data>
		<variable
			name="item"
			type="asceapps.weatheria.data.model.WeatherInfo"/>
	</data>
	<FrameLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/tv_name"
			style="@style/ListItem"
			android:layout_width="match_parent"
			android:layout_height="?attr/listPreferredItemHeight"
			android:paddingHorizontal="?attr/listPreferredItemHeight"
			android:text="@{item.locationName}"
			tools:text="@tools:sample/cities"/>
		<ImageButton
			android:id="@+id/ib_delete"
			style="@style/Widget.MaterialComponents.Button.OutlinedButton"
			android:layout_width="?attr/listPreferredItemHeight"
			android:layout_height="?attr/listPreferredItemHeight"
			android:contentDescription="@string/cd_delete"
			android:scaleType="center"
			app:srcCompat="@drawable/ic_clear"/>
		<ImageButton
			android:id="@+id/iv_drag_handle"
			style="@style/Widget.MaterialComponents.Button.OutlinedButton"
			android:layout_width="?attr/listPreferredItemHeight"
			android:layout_height="?attr/listPreferredItemHeight"
			android:layout_gravity="end"
			android:contentDescription="@string/cd_reorder"
			android:scaleType="center"
			app:srcCompat="@drawable/ic_drag_handle"/>
	</FrameLayout>
</layout>
