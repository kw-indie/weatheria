<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">
	<data>
		<variable
			name="item"
			type="asceapps.weatheria.shared.data.model.WeatherInfo"/>
	</data>
	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="?attr/listPreferredItemHeight"
		android:background="?attr/selectableItemBackground">
		<ImageButton
			android:id="@+id/ib_delete"
			style="@style/Widget.MaterialComponents.Button.OutlinedButton"
			android:layout_width="@dimen/_48sdp"
			android:layout_height="0dp"
			android:contentDescription="@string/cd_delete"
			android:scaleType="center"
			app:srcCompat="@drawable/ic_clear"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintEnd_toStartOf="@id/tv_name"
			app:layout_constraintBottom_toBottomOf="parent"/>
		<TextView
			android:id="@+id/tv_name"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:maxLines="1"
			android:textAppearance="?attr/textAppearanceListItem"
			android:text="@{item.location.name}"
			app:layout_constraintStart_toEndOf="@id/ib_delete"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintEnd_toStartOf="@id/icon"
			app:layout_constraintBottom_toTopOf="@id/tv_country"
			tools:text="@tools:sample/cities"/>
		<TextView
			android:id="@+id/tv_country"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:maxLines="1"
			android:textSize="@dimen/_10ssp"
			android:text="@{item.location.country}"
			app:layout_constraintStart_toStartOf="@id/tv_name"
			app:layout_constraintTop_toBottomOf="@id/tv_name"
			app:layout_constraintEnd_toEndOf="@id/tv_name"
			app:layout_constraintBottom_toTopOf="@id/tv_dt"
			tools:text="@tools:sample/cities"/>
		<TextView
			android:id="@+id/tv_dt"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:alpha="0.75"
			android:maxLines="1"
			android:textSize="@dimen/_10ssp"
			android:text="@{item.localNow}"
			app:layout_constraintStart_toStartOf="@id/tv_name"
			app:layout_constraintTop_toBottomOf="@id/tv_country"
			app:layout_constraintEnd_toEndOf="@id/tv_name"
			app:layout_constraintBottom_toBottomOf="parent"
			tools:text="Mon 3:51 PM (+01:00)"/>
		<ImageView
			android:id="@+id/icon"
			android:layout_width="@dimen/_24sdp"
			android:layout_height="0dp"
			android:contentDescription="@string/cd_weather_icon"
			app:icon="@{item.current.icon}"
			app:layout_constraintDimensionRatio="1:1"
			app:layout_constraintStart_toEndOf="@id/tv_name"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintEnd_toStartOf="@id/temp"
			app:layout_constraintBottom_toBottomOf="parent"
			tools:src="@drawable/w_rain_h"/>
		<TextView
			android:id="@+id/temp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@{item.currentTemp}"
			app:layout_constraintStart_toEndOf="@id/icon"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintEnd_toStartOf="@id/iv_drag_handle"
			app:layout_constraintBottom_toBottomOf="parent"
			tools:text="111Â°"/>
		<ImageButton
			android:id="@+id/iv_drag_handle"
			style="@style/Widget.MaterialComponents.Button.OutlinedButton"
			android:layout_width="@dimen/_48sdp"
			android:layout_height="0dp"
			android:contentDescription="@string/cd_reorder"
			android:scaleType="center"
			app:srcCompat="@drawable/ic_drag_handle"
			app:layout_constraintStart_toEndOf="@id/temp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"/>
	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
