<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto">
	<data>
		<variable
			name="location"
			type="asceapps.weatheria.data.LocationEntity"/>
		<variable
			name="clickListener"
			type="asceapps.weatheria.ui.search.OnLocationClickListener"/>
	</data>
	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="@dimen/_8sdp"
		android:onClick="@{() -> clickListener.onLocationClick(location)}"
		android:background="?attr/selectableItemBackground">
		<!--todo do we really need outer layout-->
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@{@string/f_comma_sep(location.name, location.country)}"
			android:textSize="@dimen/_14ssp"
			android:textStyle="bold"
			tools:text="@tools:sample/cities"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"/>
	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
