<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:scrollbars="none">
	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="@dimen/_16sdp">
		<androidx.constraintlayout.widget.Guideline
			android:id="@+id/mid_v_guideline"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			app:layout_constraintGuide_percent="0.5"/>
		<TextView
			android:id="@+id/tv_location"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:maxLines="1"
			android:textSize="@dimen/_16ssp"
			android:textStyle="bold"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			tools:text="@tools:sample/cities"/>
		<TextView
			android:id="@+id/tv_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/_10ssp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/tv_location"
			tools:text="Mon 12:59 PM (+11:00)"/>
		<TextView
			android:id="@+id/tv_last_update"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/_9ssp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/tv_time"
			tools:text="Last update: 0 min ago ⦿"/>
		<ImageView
			android:id="@+id/iv_icon"
			android:layout_width="@dimen/_72sdp"
			android:layout_height="0dp"
			android:layout_marginTop="@dimen/_32sdp"
			android:contentDescription="@string/cd_weather_icon"
			android:scaleType="fitXY"
			app:layout_constraintDimensionRatio="1:1"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/tv_last_update"
			tools:src="@drawable/w_clear_d"/>
		<TextView
			android:id="@+id/tv_temp"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:textSize="@dimen/_48ssp"
			app:layout_constraintBottom_toTopOf="@id/tv_feels_like"
			app:layout_constraintEnd_toStartOf="@id/iv_icon"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="@+id/iv_icon"
			tools:text="199°"/>
		<TextView
			android:id="@+id/tv_feels_like"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:maxLines="1"
			android:textSize="@dimen/_12ssp"
			app:layout_constraintBottom_toTopOf="@id/tv_max"
			app:layout_constraintEnd_toEndOf="@id/tv_temp"
			app:layout_constraintStart_toStartOf="@id/tv_temp"
			app:layout_constraintTop_toBottomOf="@id/tv_temp"
			tools:text="Feels like 199°"/>
		<TextView
			android:id="@+id/tv_max"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginEnd="@dimen/_4sdp"
			android:gravity="end"
			android:textSize="@dimen/_12ssp"
			app:layout_constraintBottom_toBottomOf="@id/iv_icon"
			app:layout_constraintEnd_toStartOf="@id/tv_min"
			app:layout_constraintStart_toStartOf="@id/tv_temp"
			app:layout_constraintTop_toBottomOf="@id/tv_feels_like"
			tools:text="199°"/>
		<TextView
			android:id="@+id/tv_min"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/_4sdp"
			android:textSize="@dimen/_12ssp"
			app:layout_constraintBottom_toBottomOf="@id/tv_max"
			app:layout_constraintEnd_toEndOf="@id/tv_temp"
			app:layout_constraintStart_toEndOf="@id/tv_max"
			app:layout_constraintTop_toTopOf="@id/tv_max"
			tools:text="000°"/>
		<TextView
			android:id="@+id/tv_weather"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:textSize="@dimen/_14ssp"
			android:textStyle="bold"
			app:layout_constraintBottom_toBottomOf="@id/iv_icon"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@id/iv_icon"
			app:layout_constraintTop_toTopOf="@id/iv_icon"
			tools:text="Chance of fish rain and blood"/>
		<TextView
			android:id="@+id/tv_wind"
			android:layout_width="@dimen/_120sdp"
			android:layout_height="@dimen/_24sdp"
			android:layout_marginTop="@dimen/_32sdp"
			android:layout_marginEnd="@dimen/_8sdp"
			android:contentDescription="@string/cd_wind_speed_dir"
			android:drawablePadding="@dimen/_4sdp"
			android:gravity="center_vertical|end"
			android:textSize="@dimen/_12ssp"
			app:drawableStartCompat="@drawable/ic_wind"
			app:drawableTint="?attr/colorControlNormal"
			app:layout_constraintBottom_toTopOf="@id/tv_humidity"
			app:layout_constraintEnd_toStartOf="@+id/mid_v_guideline"
			app:layout_constraintTop_toBottomOf="@+id/iv_icon"
			tools:text="150 m/s"/>
		<TextView
			android:id="@+id/tv_humidity"
			android:layout_width="@dimen/_120sdp"
			android:layout_height="@dimen/_24sdp"
			android:layout_marginTop="@dimen/_8sdp"
			android:layout_marginEnd="@dimen/_8sdp"
			android:contentDescription="@string/cd_humidity"
			android:drawablePadding="@dimen/_4sdp"
			android:gravity="center_vertical|end"
			android:textSize="@dimen/_12ssp"
			app:drawableStartCompat="@drawable/ic_humidity"
			app:layout_constraintBottom_toTopOf="@id/tv_pressure"
			app:layout_constraintEnd_toStartOf="@+id/mid_v_guideline"
			app:layout_constraintTop_toBottomOf="@+id/tv_wind"
			tools:text="70 %"/>
		<TextView
			android:id="@+id/tv_pressure"
			android:layout_width="@dimen/_120sdp"
			android:layout_height="@dimen/_24sdp"
			android:layout_marginTop="@dimen/_8sdp"
			android:layout_marginEnd="@dimen/_8sdp"
			android:contentDescription="@string/cd_pressure"
			android:drawablePadding="@dimen/_4sdp"
			android:gravity="center_vertical|end"
			android:textSize="@dimen/_12ssp"
			app:drawableStartCompat="@drawable/ic_pressure"
			app:layout_constraintBottom_toTopOf="@id/tv_clouds"
			app:layout_constraintEnd_toStartOf="@+id/mid_v_guideline"
			app:layout_constraintTop_toBottomOf="@+id/tv_humidity"
			tools:text="1000 mb"/>
		<TextView
			android:id="@+id/tv_clouds"
			android:layout_width="@dimen/_120sdp"
			android:layout_height="@dimen/_24sdp"
			android:layout_marginTop="@dimen/_8sdp"
			android:layout_marginEnd="@dimen/_8sdp"
			android:contentDescription="@string/cd_clouds"
			android:drawablePadding="@dimen/_4sdp"
			android:gravity="center_vertical|end"
			android:textSize="@dimen/_12ssp"
			app:drawableStartCompat="@drawable/ic_clouds"
			app:layout_constraintBottom_toTopOf="@id/tv_sunrise"
			app:layout_constraintEnd_toStartOf="@+id/mid_v_guideline"
			app:layout_constraintTop_toBottomOf="@+id/tv_pressure"
			tools:text="25 %"/>
		<TextView
			android:id="@+id/tv_sunrise"
			android:layout_width="@dimen/_120sdp"
			android:layout_height="@dimen/_24sdp"
			android:layout_marginTop="@dimen/_8sdp"
			android:layout_marginEnd="@dimen/_8sdp"
			android:contentDescription="@string/cd_sunrise"
			android:drawablePadding="@dimen/_4sdp"
			android:gravity="center_vertical|end"
			android:textSize="@dimen/_12ssp"
			app:drawableStartCompat="@drawable/ic_sunrise"
			app:layout_constraintBottom_toTopOf="@id/tv_sunset"
			app:layout_constraintEnd_toStartOf="@+id/mid_v_guideline"
			app:layout_constraintTop_toBottomOf="@+id/tv_clouds"
			tools:text="5:35 AM"/>
		<TextView
			android:id="@+id/tv_sunset"
			android:layout_width="@dimen/_120sdp"
			android:layout_height="@dimen/_24sdp"
			android:layout_marginTop="@dimen/_8sdp"
			android:layout_marginEnd="@dimen/_8sdp"
			android:contentDescription="@string/cd_sunset"
			android:drawablePadding="@dimen/_4sdp"
			android:gravity="center_vertical|end"
			android:textSize="@dimen/_12ssp"
			app:drawableStartCompat="@drawable/ic_sunset"
			app:layout_constraintEnd_toStartOf="@+id/mid_v_guideline"
			app:layout_constraintTop_toBottomOf="@+id/tv_sunrise"
			tools:text="7:41 PM"/>
		<TextView
			android:id="@+id/tv_pop"
			android:layout_width="@dimen/_120sdp"
			android:layout_height="@dimen/_24sdp"
			android:layout_marginStart="@dimen/_8sdp"
			android:contentDescription="@string/cd_pop"
			android:drawablePadding="@dimen/_4sdp"
			android:gravity="center_vertical|end"
			android:textSize="@dimen/_12ssp"
			app:drawableStartCompat="@drawable/ic_pop"
			app:layout_constraintBottom_toTopOf="@id/tv_dew_point"
			app:layout_constraintStart_toEndOf="@id/mid_v_guideline"
			app:layout_constraintTop_toTopOf="@id/tv_wind"
			tools:text="100 %"/>
		<TextView
			android:id="@+id/tv_dew_point"
			android:layout_width="@dimen/_120sdp"
			android:layout_height="@dimen/_24sdp"
			android:layout_marginStart="@dimen/_8sdp"
			android:layout_marginTop="@dimen/_8sdp"
			android:contentDescription="@string/cd_dew_point"
			android:drawablePadding="@dimen/_4sdp"
			android:gravity="center_vertical|end"
			android:textSize="@dimen/_12ssp"
			app:drawableStartCompat="@drawable/ic_dew_point"
			app:layout_constraintBottom_toTopOf="@id/tv_visibility"
			app:layout_constraintStart_toEndOf="@id/mid_v_guideline"
			app:layout_constraintTop_toBottomOf="@+id/tv_pop"
			tools:text="99°"/>
		<TextView
			android:id="@+id/tv_visibility"
			android:layout_width="@dimen/_120sdp"
			android:layout_height="@dimen/_24sdp"
			android:layout_marginStart="@dimen/_8sdp"
			android:layout_marginTop="@dimen/_8sdp"
			android:contentDescription="@string/cd_visibility"
			android:drawablePadding="@dimen/_4sdp"
			android:gravity="center_vertical|end"
			android:textSize="@dimen/_12ssp"
			app:drawableStartCompat="@drawable/ic_visibility"
			app:layout_constraintBottom_toTopOf="@id/tv_uv"
			app:layout_constraintStart_toEndOf="@id/mid_v_guideline"
			app:layout_constraintTop_toBottomOf="@+id/tv_dew_point"
			tools:text="10.0 km"/>
		<TextView
			android:id="@+id/tv_uv"
			android:layout_width="@dimen/_120sdp"
			android:layout_height="@dimen/_24sdp"
			android:layout_marginStart="@dimen/_8sdp"
			android:layout_marginTop="@dimen/_8sdp"
			android:contentDescription="@string/cd_uv"
			android:drawablePadding="@dimen/_4sdp"
			android:gravity="center_vertical|end"
			android:textSize="@dimen/_12ssp"
			app:drawableStartCompat="@drawable/ic_uv"
			app:layout_constraintBottom_toTopOf="@id/tv_moonrise"
			app:layout_constraintStart_toEndOf="@id/mid_v_guideline"
			app:layout_constraintTop_toBottomOf="@+id/tv_visibility"
			tools:text="4 (Moderate)"/>
		<TextView
			android:id="@+id/tv_moonrise"
			android:layout_width="@dimen/_120sdp"
			android:layout_height="@dimen/_24sdp"
			android:layout_marginStart="@dimen/_8sdp"
			android:layout_marginTop="@dimen/_8sdp"
			android:contentDescription="@string/cd_moonrise"
			android:drawablePadding="@dimen/_4sdp"
			android:gravity="center_vertical|end"
			android:textSize="@dimen/_12ssp"
			app:drawableStartCompat="@drawable/ic_moonrise"
			app:layout_constraintBottom_toTopOf="@id/tv_moonset"
			app:layout_constraintStart_toEndOf="@id/mid_v_guideline"
			app:layout_constraintTop_toBottomOf="@+id/tv_uv"
			tools:text="3:35 PM"/>
		<TextView
			android:id="@+id/tv_moonset"
			android:layout_width="@dimen/_120sdp"
			android:layout_height="@dimen/_24sdp"
			android:layout_marginStart="@dimen/_8sdp"
			android:layout_marginTop="@dimen/_8sdp"
			android:contentDescription="@string/cd_moonset"
			android:drawablePadding="@dimen/_4sdp"
			android:gravity="center_vertical|end"
			android:textSize="@dimen/_12ssp"
			app:drawableStartCompat="@drawable/ic_moonset"
			app:layout_constraintStart_toEndOf="@id/mid_v_guideline"
			app:layout_constraintTop_toBottomOf="@+id/tv_moonrise"
			tools:text="4:59 AM"/>
		<View
			android:id="@+id/hourly_divider"
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_marginTop="@dimen/_8sdp"
			android:background="@drawable/divider"
			app:layout_constraintTop_toBottomOf="@id/tv_moonset"/>
		<TextView
			android:id="@+id/hourly_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/_8sdp"
			android:text="@string/hourly_label"
			android:textAllCaps="true"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/hourly_divider"/>
		<asceapps.weatheria.ui.view.WeatherChart
			android:id="@+id/hourly_chart"
			android:layout_width="match_parent"
			android:layout_height="@dimen/_144sdp"
			android:layout_marginTop="@dimen/_8sdp"
			app:dataType="hourly"
			app:divider="@drawable/divider"
			app:graphPadding="@dimen/_16sdp"
			app:layout_constraintTop_toBottomOf="@id/hourly_label"
			app:lineWidth="1px"
			app:pointTextSize="14sp"
			app:showDividers="middle"/>
		<View
			android:id="@+id/daily_divider"
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_marginTop="@dimen/_8sdp"
			android:background="@drawable/divider"
			app:layout_constraintTop_toBottomOf="@id/hourly_chart"/>
		<TextView
			android:id="@+id/daily_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/_8sdp"
			android:text="@string/daily_label"
			android:textAllCaps="true"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/daily_divider"/>
		<asceapps.weatheria.ui.view.WeatherChart
			android:id="@+id/daily_chart"
			android:layout_width="match_parent"
			android:layout_height="@dimen/_144sdp"
			android:layout_marginTop="@dimen/_8sdp"
			app:dataType="daily"
			app:divider="@drawable/divider"
			app:graphPadding="@dimen/_16sdp"
			app:layout_constraintTop_toBottomOf="@id/daily_label"
			app:lineWidth="1px"
			app:pointTextSize="14sp"
			app:showDividers="middle"/>
	</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>