<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/nav_graph"
	app:startDestination="@id/homeFragment">
	<fragment
		android:id="@+id/homeFragment"
		android:name="asceapps.weatheria.ui.fragment.HomeFragment"
		android:label=""
		tools:layout="@layout/fragment_home">
		<action
			android:id="@+id/action_open_search"
			app:destination="@id/searchFragment"
			app:launchSingleTop="true"/>
		<action
			android:id="@+id/action_open_saved_locations"
			app:destination="@id/savedLocationsFragment"
			app:launchSingleTop="true"/>
		<action
			android:id="@+id/action_open_settings"
			app:destination="@id/settingsFragment"
			app:launchSingleTop="true"/>
	</fragment>
	<fragment
		android:id="@+id/savedLocationsFragment"
		android:name="asceapps.weatheria.ui.fragment.SavedLocationsFragment"
		android:label="@string/action_locations"
		tools:layout="@layout/fragment_saved_locations">
		<action
			android:id="@id/action_open_settings"
			app:destination="@id/settingsFragment"
			app:launchSingleTop="true"/>
	</fragment>
	<fragment
		android:id="@+id/searchFragment"
		android:name="asceapps.weatheria.ui.fragment.SearchFragment"
		android:label="@string/action_search"
		tools:layout="@layout/fragment_search">
		<action
			android:id="@id/action_open_settings"
			app:destination="@id/settingsFragment"
			app:launchSingleTop="true"/>
	</fragment>
	<fragment
		android:id="@+id/settingsFragment"
		android:name="asceapps.weatheria.ui.fragment.SettingsFragment"
		android:label="@string/action_settings"/>
</navigation>