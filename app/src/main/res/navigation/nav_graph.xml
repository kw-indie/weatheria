<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/nav_graph"
	app:startDestination="@id/homeFragment">
	<fragment
		android:id="@+id/homeFragment"
		android:name="asceapps.weatheria.ui.home.HomeFragment"
		android:label=""
		tools:layout="@layout/fragment_home">
		<action
			android:id="@+id/action_open_map"
			app:destination="@id/mapFragment"
			app:launchSingleTop="true"/>
		<action
			android:id="@+id/action_open_search"
			app:destination="@id/searchFragment"
			app:launchSingleTop="true"/>
		<action
			android:id="@+id/action_open_settings"
			app:destination="@id/settingsFragment"
			app:launchSingleTop="true"/>
	</fragment>
	<fragment
		android:id="@+id/mapFragment"
		android:name="asceapps.weatheria.ui.map.MapFragment"
		android:label="@string/action_add_location"
		tools:layout="@layout/fragment_map">
		<!--https://developer.android.com/guide/navigation/navigation-deep-link#implicit-->
		<!--https://developer.android.com/guide/components/intents-common#ViewMap-->
		<!--todo code this-->
		<!--<deepLink
			android:id="@+id/deepLink"
			app:action="android.intent.action.VIEW"
			app:uri="geo"/>-->
		<action
			android:id="@+id/action_ok_new_location"
			app:destination="@id/searchFragment"
			app:launchSingleTop="true"
			app:popUpTo="@id/searchFragment"
			app:popUpToInclusive="true">
			<argument
				android:name="latLng"
				app:argType="com.google.android.libraries.maps.model.LatLng"/>
		</action>
	</fragment>
	<fragment
		android:id="@+id/searchFragment"
		android:name="asceapps.weatheria.ui.search.SearchFragment"
		android:label=""
		tools:layout="@layout/fragment_search">
		<argument
			android:name="latLng"
			app:argType="com.google.android.libraries.maps.model.LatLng"
			app:nullable="true"
			android:defaultValue="@null"/>
	</fragment>
	<fragment
		android:id="@+id/settingsFragment"
		android:name="asceapps.weatheria.ui.settings.SettingsFragment"
		android:label="@string/action_settings"/>
</navigation>