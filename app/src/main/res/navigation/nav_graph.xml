<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/nav_graph"
	app:startDestination="@id/homeFragment">
	<fragment
		android:id="@+id/homeFragment"
		android:name="asceapps.weatheria.ui.home.HomeFragment"
		android:label=""
		tools:layout="@layout/fragment_home">
		<action
			android:id="@+id/action_open_search"
			app:destination="@id/searchFragment"
			app:launchSingleTop="true"/>
		<action
			android:id="@+id/action_open_settings"
			app:destination="@id/settingsFragment"
			app:launchSingleTop="true"/>
		<action
			android:id="@+id/action_open_locations"
			app:destination="@id/locationsFragment"/>
	</fragment>
	<fragment
		android:id="@+id/searchFragment"
		android:name="asceapps.weatheria.ui.search.SearchFragment"
		android:label=""
		tools:layout="@layout/fragment_search">
		<action
			android:id="@+id/action_open_map"
			app:destination="@id/mapFragment"
			app:launchSingleTop="true"/>
	</fragment>
	<fragment
		android:id="@+id/mapFragment"
		android:name="asceapps.weatheria.ui.map.MapFragment"
		android:label="@string/select_on_map"
		tools:layout="@layout/fragment_map"/>
	<fragment
		android:id="@+id/settingsFragment"
		android:name="asceapps.weatheria.ui.settings.SettingsFragment"
		android:label="@string/action_settings"/>
	<fragment
		android:id="@+id/locationsFragment"
		android:name="asceapps.weatheria.ui.locations.LocationsFragment"
		android:label="@string/action_locations"/>
</navigation>